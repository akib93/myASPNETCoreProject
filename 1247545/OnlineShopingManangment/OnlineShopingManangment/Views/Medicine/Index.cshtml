@model PaginatedList<OnlineShopingManangment.Models.Medicine>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>



<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by name: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Search" class="btn btn-default" />
        </p>
    </div>
</form>



<table class="table table-bordered table-hover table-active" enctype="multipart/form-data" style="background-color:antiquewhite">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]" asp-routecurrentFilter="@ViewData[" CurrentFilter"]">Medicine Name</a>
            </th>
            <th>
               <label>Short Description</label>
            </th>
            <th>
                <label>Long Description</label>
            </th>
            <th>
                <label>Price</label>
            </th>
            <th>
                <label>Picture </label>
            </th>
            <th>
                <label>Active or Not</label>
            </th>
            <th>
                <label>In Stock</label>
            </th>
            <th>
                <label>Category </label>
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShortDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LongDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>

                <td>
                    <img style="height:100px; width:100px" class="img-thumbnail" src="@item.ImageThumbnailUrl"
                         asp-append-version="true" alt="@item.ImageThumbnailUrl" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsPreferredMedicine)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InStock)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.CategoryName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MedicineId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.MedicineId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.MedicineId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}
<a asp-action="Index"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-pageNumber="@(Model.PageIndex - 1)"
   asp-route-currentFilter="@ViewData["CurrentFilter"]"
   class="btn btn-default @prevDisabled">
    Previous
</a>
<a asp-action="Index"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-pageNumber="@(Model.PageIndex + 1)"
   asp-route-currentFilter="@ViewData["CurrentFilter"]"
   class="btn btn-default @nextDisabled">
    Next
</a>
