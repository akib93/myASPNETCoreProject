@model ShoppingCartViewModel

<div class="row checkoutForm">
    <h2>Your shopping cart</h2>
    
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Selected amount</th>
         
                <th>Medicine</th>
                <th class="text-right">Price</th>
                <th class="text-right">Subtotal</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var items in Model.ShoppingCart.ShoppingCartItems)
            {
                <tr>
                    <td class="text-center">@items.Amount</td>
                    <td class="text-left">@items.Medicine.Name</td>
                    <td class="text-right">@items.Medicine.Price.ToString("c")</td>
                    <td class="text-right">
                        @((items.Amount * items.Medicine.Price).ToString("c"))
                    </td>
                    <td class="text-center"><a class="glyphicon glyphicon-remove text-danger remove" asp-controller="ShoppingCart" asp-action="RemoveFromShoppingCart" asp-route-medicineId="@items.Medicine.MedicineId"></a></td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-right">Total:</td>
                <td class="text-right">
                    @Model.ShoppingCartTotal.ToString("c")
                </td>
            </tr>
        </tfoot>
    </table>

    <div class="text-right">
        <div class="btn-group ">
            <a class="btn btn-success" asp-controller="Order" asp-action="Checkout">Check out</a>
            <a class="btn-group">
                <a class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                    Add more medicine<span class="caret"></span>
                </a>
                <ul class="dropdown-menu" role="menu">
                    <li><a asp-controller="Medicine" asp-action="List" asp-route-category="Tablet">Tablet</a></li>
                    <li><a asp-controller="Medicine" asp-action="List" asp-route-category="Syrup">Syrup</a></li>
                </ul>
            </a>
        </div>
    </div>
</div>

