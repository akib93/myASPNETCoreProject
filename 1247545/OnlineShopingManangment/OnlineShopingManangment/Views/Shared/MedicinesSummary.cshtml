@model Medicine

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail"style="float:left;">
        <img src="@Model.ImageThumbnailUrl" alt="" height="400" width="300"/>
        <br />
        <div class="caption">
            <h3 class="pull-right">@Model.Price.ToString("c")</h3>
            <h3>
                <a asp-controller="Medicine" asp-action="All" asp-route-medicineId="@Model.MedicineId">@Model.Name</a>
            </h3>
            <p>@Model.ShortDescription</p>
        </div>
        <div class="addToCart text-right">
            <p class="button " style="text-align:center">
                <a class="btn btn-success" id="cartButton" asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-medicineId="@Model.MedicineId">
                    Add to cart
                </a>
            </p>
        </div>
    </div>
</div>
